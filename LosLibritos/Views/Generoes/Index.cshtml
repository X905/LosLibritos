@model IEnumerable<LosLibritos.Models.Genero>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<p>
    <a href="@Url.Action("Create")" class="btn btn-success btn-md"><span class="glyphicon glyphicon-plus"></span></a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreGenero)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreGenero)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.Id_Genero })" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
            <a href="@Url.Action("Delete", new { id = item.Id_Genero })" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
            <a href="@Url.Action("Details", new { id = item.Id_Genero })" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-eye-open"></span></a>
        </td>
    </tr>
}

</table>
